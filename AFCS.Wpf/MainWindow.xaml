<Window x:Class="AFCS.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AFCS – WPF"
        Height="650" Width="920"
        Background="{StaticResource CardBackground}">
    <Grid Margin="16" RowDefinitions="Auto,*,Auto">
        <Border Background="{StaticResource PanelBackground}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="12" >
            <Grid ColumnDefinitions="2*,2*,2*,2*" RowDefinitions="Auto,Auto">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="장비" VerticalAlignment="Center" Margin="0,0,4,0" />
                    <ComboBox x:Name="EquipmentCombo" Width="140" SelectionChanged="OnEquipmentChanged" />
                    <TextBlock Text="사거리 (m)" VerticalAlignment="Center" Margin="12,0,4,0" />
                    <TextBox x:Name="DistanceBox" Width="100" />
                    <TextBlock Text="사수 고도 (m)" VerticalAlignment="Center" Margin="12,0,4,0" />
                    <TextBox x:Name="MyAltitudeBox" Width="100" />
                    <TextBlock Text="목표 고도 (m)" VerticalAlignment="Center" Margin="12,0,4,0" />
                    <TextBox x:Name="TargetAltitudeBox" Width="100" />
                    <Button Content="계산" Width="100" Margin="12,0,0,0" Click="OnCalculateClicked" Background="{StaticResource AccentBrush}" Foreground="White" />
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" Margin="0,12,0,0">
                    <TextBlock Text="저각 장약" VerticalAlignment="Center" />
                    <ComboBox x:Name="LowChargeCombo" Width="140" />
                    <TextBlock Text="고각 장약" VerticalAlignment="Center" Margin="12,0,0,0" />
                    <ComboBox x:Name="HighChargeCombo" Width="140" />
                    <TextBlock x:Name="AltitudeDelta" Margin="16,0,0,0" VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,12,0,12" ColumnDefinitions="*,*" ColumnSpacing="12">
            <Border Background="{StaticResource PanelBackground}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="12">
                <DockPanel>
                    <TextBlock Text="저각" FontWeight="Bold" DockPanel.Dock="Top" />
                    <ListView x:Name="LowResults" Margin="0,8,0,0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="CH" DisplayMemberBinding="{Binding Charge}" Width="50" />
                                <GridViewColumn Header="MILL" DisplayMemberBinding="{Binding Mill}" Width="140" />
                                <GridViewColumn Header="ETA" DisplayMemberBinding="{Binding Eta}" Width="80" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <TextBlock x:Name="LowStatus" Foreground="Gray" Margin="0,8,0,0" />
                </DockPanel>
            </Border>
            <Border Background="{StaticResource PanelBackground}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="12" Grid.Column="1">
                <DockPanel>
                    <TextBlock Text="고각" FontWeight="Bold" DockPanel.Dock="Top" />
                    <ListView x:Name="HighResults" Margin="0,8,0,0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="CH" DisplayMemberBinding="{Binding Charge}" Width="50" />
                                <GridViewColumn Header="MILL" DisplayMemberBinding="{Binding Mill}" Width="140" />
                                <GridViewColumn Header="ETA" DisplayMemberBinding="{Binding Eta}" Width="80" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <TextBlock x:Name="HighStatus" Foreground="Gray" Margin="0,8,0,0" />
                </DockPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="{StaticResource PanelBackground}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="12">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="rangeTables 폴더의 데이터를 사용하여 WPF에서 계산을 수행합니다." />
                <TextBlock Text="CSV 데이터가 없으면 결과가 표시되지 않습니다." Foreground="Gray" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
