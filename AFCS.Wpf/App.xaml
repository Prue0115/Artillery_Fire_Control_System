<Application x:Class="AFCS.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="CardBackground" Color="#f5f5f7" />
            <SolidColorBrush x:Key="PanelBackground" Color="#ffffff" />
            <SolidColorBrush x:Key="BorderBrush" Color="#d1d1d6" />
            <SolidColorBrush x:Key="AccentBrush" Color="#007aff" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
